# VPCO Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# Server Configuration
PORT=3000
NODE_ENV=production

# Wix API Configuration (optional)
WIX_API_KEY=your_wix_api_key_here
WIX_API_TOKEN=your_wix_token_here
WIX_SITE_ID=your_wix_site_id_here
WIX_ACCOUNT_ID=your_wix_account_id_here

# Optional: Custom Domain Settings
DOMAIN_NAME=vigliottaproperties.com

# Slack App Configuration
SLACK_APP_ID=your_slack_app_id_here
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_VERIFICATION_TOKEN=your_slack_verification_token_here

# Slack Incoming Webhook URL
# Get this from: https://api.slack.com/apps/A09M2LDH6KC/incoming-webhooks
# After you add an Incoming Webhook to a channel, paste the URL below:
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL